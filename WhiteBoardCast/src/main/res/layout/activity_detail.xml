<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.livejournal.karino2.whiteboardcast.DetailActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20150708"
        android:id="@+id/buttonVideoName"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=".webm"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/buttonVideoName"
        android:layout_alignRight="@+id/videoThumbnailView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/videoThumbnailView"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonVideoName" />



</RelativeLayout>
